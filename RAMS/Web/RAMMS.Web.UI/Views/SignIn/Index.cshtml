@model RAMMS.Domain.Models.RmUserCredential
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <meta name="description" content="RAMS">
    <meta name="author" content="RAMS">
    <title>User Login - Road Asset Management and Maintenance System</title>
    <link rel="icon" href="" type="image/png">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/custom.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="vid-container">
        <video class="bgvid" autoplay="autoplay" muted="muted" preload="auto" loop>
            <source src="~/assets/media/videos/ramms-video.mp4" type="video/mp4">
        </video>

        <div class="login-overflow">
            <div class="inner-container">
                <div class="mx-auto">
                    <div class="card login-card shadow-lg mb-0">
                        <div class="card-body py-4 px-sm-4">
                            <div class="container-fluid d-flex p-0">
                                <div class="text-left" style="padding-top:2px;"><img src="~/assets/media/JKKR-logo.png" width="80" /></div>
                                <div class="w-100 text-center p-0">
                                    <h2 class="font-46 mb-0 font-bebas text-uppercase head-color" style="margin-top: -20px;"><img src="~/assets/media/RAMS-logo.png" width="104" class="rams-l" /></h2>
                                </div>
                                <div class="text-right"><img src="~/assets/media/endaya-logo.png" width="59" class="endaya-l" /></div>
                            </div>
                            <div class="col-md-12 text-center p-0 mt-1">
                                <h4 class="text-white font-bebas text-uppercase head-color font-24">Road Asset Management and Maintenance System</h4>
                            </div>
                            <div class="mb-4 text-center">
                                <h4 class="h3 mb-1 font-bebas text-uppercase head-color font-24">Welcome, Please Sign In</h4>
                            </div>
                            <span class="clearfix"></span>
                            <form class="login-form js-validation-signin" id="loginPage" method="post" autocomplete="off">
                                <span errorMessage class="w-100 text-center text-danger">@ViewBag.ErrorMessage</span>
                                <div class="form-group">
                                    <div class="input-group input-group-merge">
                                        <input type="text" id="txtUserName" name="UsrUserName" class="form-control" Placeholder="Username" value="@Model.UsrUserName" />
                                    </div>
                                    <span errorMessage class="w-100 text-center text-danger">
                                        @Html.ValidationMessageFor(x => x.UsrUserName)
                                    </span>
                                </div>

                                <div class="form-group">
                                    <div class="input-group input-group-merge">
                                        <input type="password" id="txtPassword" name="UsrPassword" class="form-control" Placeholder="Password" />
                                    </div>
                                    <span errorMessage class="w-100 text-center text-danger">
                                        @Html.ValidationMessageFor(x => x.UsrPassword)
                                    </span>
                                </div>

                                <label class="float-left text-white mb-0" style="line-height: 24px;">
                                    <input type="checkbox" checked="checked" id="login-remember" name="login-remember" style="height: 20px;">
                                    <span class="position-relative pl-2" style="top: -5px;">Remember me</span>
                                </label>
                                <div class="mt-3 text-right"><a href="~/SignIn/ForgotPassword" id="forgetPassword" onfocus="onfocus()" class="font-weight-semilbold text-white" style="border:none">Forgot Password?</a></div>

                                <div class="mt-4 p-0">
                                    <button type="submit" name="action:SignIn" formmethod="post" class="btn btn-block btn-primary py-2">Sign in</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

            <div class="clear-b"></div>

            <!--News Highlights-->
            <div class="jkr-carousel">
                <div class="container">
                    <h3 class="text-center highlights-title font-bebas">Latest <span>Highlights</span></h3>

                    <div id="newsHighlights-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item px-3 active" data-interval="8000">
                                <div class="row">
                                    <div class="col-12 hlight-head">Miri: Endaya Construction Sdn Bhd had Annual Dinner 2022</div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/AnnualDinner2022/ANNUALDINNER_001.png" alt="Card image cap"></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/AnnualDinner2022/ANNUALDINNER_002.png" alt="Card image cap"></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/AnnualDinner2022/ANNUALDINNER_003.png" alt="Card image cap"></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/AnnualDinner2022/ANNUALDINNER_004.png" alt="Card image cap"></div>
                                </div>
                            </div>
                            <div class="carousel-item px-3" data-interval="8000">
                                <div class="row">
                                    <div class="col-12 hlight-head">Road Safety Awareness Campaign, Permyjaya Kintown Shell</div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/RoadSafetyAwarness/ROADSAFETY_001.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/RoadSafetyAwarness/ROADSAFETY_002.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/RoadSafetyAwarness/ROADSAFETY_003.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/RoadSafetyAwarness/ROADSAFETY_004.png" alt="Card image cap" /></div>
                                </div>
                            </div>
                            <div class="carousel-item px-3" data-interval="8000">
                                <div class="row">
                                    <div class="col-12 hlight-head">JKRS State Technical Committee(STC) MeetingMajlis Berbuka Puasa di Pullman Miri, 09<sup>th</sup> April 2022</div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MajlisBerbukaPuasadiPullman09Apr2022/MAJIS_001.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MajlisBerbukaPuasadiPullman09Apr2022/MAJIS_002.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MajlisBerbukaPuasadiPullman09Apr2022/MAJIS_003.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MajlisBerbukaPuasadiPullman09Apr2022/MAJIS_004.png" alt="Card image cap" /></div>
                                </div>
                            </div>
                            <div class="carousel-item px-3" data-interval="8000">
                                <div class="row">
                                    <div class="col-12 hlight-head">JKR Sarawak, Engagement and Technical Meeting at The Waterfront Hotel, Kuching</div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/JKRSEngaegmentTechMeeting/JKRS_001.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/JKRSEngaegmentTechMeeting/JKRS_002.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/JKRSEngaegmentTechMeeting/JKRS_003.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/JKRSEngaegmentTechMeeting/JKRS_004.png" alt="Card image cap" /></div>
                                </div>
                            </div>
                            <div class="carousel-item px-3" data-interval="8000">
                                <div class="row">
                                    <div class="col-12 hlight-head">Multi-Laser Profiler (MLP) & Falling Weight Deflectometer (FWD)</div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MLP_FWD/MLP_001.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MLP_FWD/MLP_002.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MLP_FWD/MLP_003.png" alt="Card image cap" /></div>
                                    <div class="col-md-3"><img class="card-img-top img-fluid" src="~/assets/media/news-highlights/Aug2022/MLP_FWD/MLP_004.png" alt="Card image cap" /></div>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#newsHighlights-carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#newsHighlights-carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
<style type="text/css">
  #forgetPassword:focus{
    border:1px solid red;
  }
</style>