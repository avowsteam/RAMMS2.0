@model RAMMS.Web.UI.Models.CDataTable

@using RAMMS.Web.UI.Models;
@using RAMMS.Business.ServiceProvider;
@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;
@{
    ViewBag.TabTitle = "Form B11";
    ViewData["Title"] = "Form B11";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var isModifyPerm = security.IsPCModify(ModuleNameList.Annual_Work_Planned_Budget) ? "" : "hidden";
    var isDeletePerm = security.IsPCDelete(ModuleNameList.Annual_Work_Planned_Budget) ? "" : "hidden";
}

@section Scripts{
    <script type="text/javascript" src="~/js/FormB11.js" asp-append-version="true"></script>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#formB11Year").chosen();
    });
    function clearHeaderSearch() {
        $("#formB11RMU").val("").trigger("chosen:updated");
        $("#formB11SmartSearch").val('');
        $("#formB11Year").val("").trigger("chosen:updated");
        $("#fromRevDate").val("");
        $("#toRevDate").val("");
        $("[searchsectionbtn]").click();
    }
</script>

<div class="container-fluid">
    <div class="row">

        <div class="body-header w-100">
            <div class="row bg-white pt-4">
                <div class="w-100">
                    <div class="body-header w-100">
                        <div class="col-lg-12">
                            <div class="w-100 d-flex justify-content-md-between py-2 align-items-center">
                                <span class="mb-0 font-weight-bold font-20">
                                    Appendix B11
                                </span>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb breadcrumb-alt mb-0 bg-transparent">
                                        <li class="breadcrumb-item">Home</li>
                                        <li class="breadcrumb-item">
                                            AWPB
                                        </li>
                                        <li class="breadcrumb-item" aria-current="page">
                                            Appendix B11
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="search-section" searchSection>
                <div class="justify-content-center mb-1">
                    <div class="search-content">
                        <div class="input-group">
                            <input autocomplete="off" class="form-control" id="formB11SmartSearch" name="SearchObj.SmartInputValue" onfocus="this.removeAttribute('readonly')" placeholder="Search..." spellcheck="false" type="text" value="" param="KeySearch">
                            <div class="input-group-append">
                                <div class="btn-group">
                                    <button onclick="tblFB11HGrid.Search(this,'#formG1G2Search');" SearchSectionBtn type="button" class="bg-theme-color js-tooltip-enabled px-2 border-0" style="line-height: 18px;"><span class="search-icon"></span></button>
                                    <button id="btnAdvSearch" type="button" class="bg-theme-color js-tooltip-enabled px-3 border-0" data-toggle="collapse" data-target="#div_advsearch"><span class="filter-icon"></span></button>
                                    <button id="btnClearSearch" type="button" onclick="clearHeaderSearch()" class="bg-theme-color js-tooltip-enabled px-3 border-0 rounded-right">Clear</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="div_advsearch" class="collapse">
                        <div class="col-lg-10 offset-lg-1">
                            <div class="bg-white rounded float-left pt-3 pb-1 px-lg-4 px-md-3 advance-search-group w-100">
                                <div class="row">
                                    <div class="form-group col-3">
                                        @Html.Label("Select RMU", "Select RMU")
                                        @Html.DropDownList("RMU", (IEnumerable<SelectListItem>)ViewData["RMU"], "Select RMU", new { @Id = "formB11RMU", @class = "form-control", @param = "RMUCode", @clear = "rebind" })
                                    </div>

                                    <div class="form-group col-3">
                                        @Html.Label("Year", "Year")
                                        @Html.DropDownList("FromRevisionYear", (IEnumerable<SelectListItem>)ViewData["Year"], "Select Year", new { @Id = "formB11Year", @class = "form-control", @param = "Year", @clear = "rebind" })
                                    </div>

                                    <div class="form-group col-lg-3">
                                        @Html.Label(" Revision Date From", " Revision Date From")
                                        <input id="fromRevDate" type="date" class="form-control" param="fromRevDate" />
                                    </div>

                                    <div class="form-group col-3">
                                        @Html.Label("Revision Date To ", "Revision Date To ")
                                        <input id="toRevDate" type="date" class="form-control" param="toRevDate" />

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="w-100 dt-tbl-section">

                <div class="w-100 float-left position-relative">

                    <div id="headerListGrid" class="w-100 dt-tbl-section">
                        @{
                            Html.RenderPartial("_CDataTable", Model);
                        }
                    </div>
                </div>

            </div>
        </div>


    </div>

</div>