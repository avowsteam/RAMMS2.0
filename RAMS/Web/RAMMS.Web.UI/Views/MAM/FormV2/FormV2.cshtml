@using RAMMS.Business.ServiceProvider
@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;

@{
    ViewBag.TabTitle = "ERT - Form V2 - Road Asset Management and Maintenance System";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var isModifyPerm = security.IsPCModify(ModuleNameList.Management_and_Maintanence) ? "" : "hidden";
    var isDeletePerm = security.IsPCDelete(ModuleNameList.Management_and_Maintanence) ? "" : "hidden";
}

@model RAMMS.Web.UI.Models.FormV2Model;
<script type="text/javascript">
    $(document).ready(function () {
        $("#formV2DetSrchRMU").chosen();
        $('#formV2DetSrchSectionCode').chosen();
        $("#formV2AdvSearch").hide();

        $("#formV2DetSrchRMU").on("change", function () {
            var req = {};
            req.Section = '';
            req.RoadCode = '';
            req.RMU = $("#formV2DetSrchRMU option:selected").text().split("-")[1];

            $.ajax({
                url: '/MAM/RMUSecRoad',
                dataType: 'JSON',
                data: req,
                type: 'Post',
                success: function (data) {
                    if (data != null) {
                        $("#formV2DetSrchSectionCode").empty();
                        $("#formV2DetSrchSectionCode").append($("<option></option>").val("").html("Select Section Code"));
                        $.each(data.section, function (index, v) {
                            $("#formV2DetSrchSectionCode").append($("<option></option>").val(v.value).html(v.text));
                        });
                        $('#formV2DetSrchSectionCode').trigger("chosen:updated")

                    }
                },
                error: function (data) {

                    console.error(data);
                }
            });
        });
         $("#formV2DetSrchRMU").trigger("change");
    });

    function clearHeaderSearch() {
        $("#FormV2SmartSearch").val('');
        $("#formV2DetSrchRMU").val("").trigger("chosen:updated");
        $('#formV2DetSrchSectionCode').val("").trigger("chosen:updated");
        $("#formV2DetSrchCrew").val("").trigger("chosen:updated");
        $("#formV2DetSrchActivityCode").val("").trigger("chosen:updated");
        $("#FormV2SrchByFromDate").val('');
        $("#FormV2SrchByToDate").val('');

        var req = {};
        var _rmu = $("#formV2DetSrchRMU");
        var _road = $("#formV2DetSrchSectionCode");
        req.RMU = this.value;
        req.Section = '';
        req.RoadCode = '';

        $.ajax({
            url: '/ERT/RMUSecRoad',
            dataType: 'JSON',
            data: req,
            type: 'Post',
            success: function (data) {
                if (req.RMU == "") {
                    $("#formV2DetSrchRMU").empty();
                    $("#formV2DetSrchRMU").append($("<option></option>").val("").html("Select RMU"));
                    $.each(data.rmu, function (index, v) {
                        $("#formV2DetSrchRMU").append($("<option></option>").val(v.value).html(v.text));
                    });
                }
                if (req.Section == "") {
                    $("#formV2DetSrchSectionCode").empty();
                    $("#formV2DetSrchSectionCode").append($("<option></option>").val("").html("Select Section Code"));
                    $.each(data.section, function (index, v) {
                        $("#formV2DetSrchSectionCode").append($("<option></option>").val(v.value).html(v.text));
                    });

                    $('#formV2DetSrchSectionCode').trigger("chosen:updated");
                }
            },
            error: function (data) {

                console.error(data);
            }
        });
        $("#formV2SearchBtn").click();
    }

    function detailSearch() {
        $("#formV2AdvSearch").slideToggle(500);
    }

    function FormV2GridRefresh() {
        oTable = $('#FormV2GridView').DataTable();
        oTable.columns(0).search($("#FormV2SmartSearch").val().trim());
        oTable.columns(1).search($("#formV2DetSrchRMU").val().trim());
        oTable.columns(2).search($("#formV2DetSrchSectionCode").val().trim());
        otable.columns(3).search($("#formV2DetSrchCrew").val().trim());
        otable.columns(4).search($("#formV2DetSrchActivityCode").val().trim());
        oTable.columns(5).search($("#FormV2SrchByFromDate").val().trim());
        oTable.columns(6).search($("#FormV2SrchByToDate").val().trim());
        oTable.data = filterData;
        oTable.draw();
    }

    function EditFormV2(pid,view) {
        window.location = "@Url.Action("EditFormV2", "MAM")" +
            "?id=" + pid + "&view=" + view;
    }

    function DeleteHeaderRecord(id) {
        var headerId = id;
        app.Confirm("Are you sure you want to delete the record?, If Yes click OK.", function (e) {
            if (e) {
                InitAjaxLoading();
                $.ajax({
                    url: '/MAM/HeaderListFormV2Delete',
                    data: { headerId },
                    type: 'POST',
                    success: function (data) {
                        if (data > 0) {
                            app.ShowSuccessMessage('Successfully Deleted', false);
                            FormV2GridRefresh();
                        }
                        else {
                            app.ShowErrorMessage("Error in Deleted. Kindly retry later.", false);
                        }
                        HideAjaxLoading();
                    }
                });
            }
        });
    }

    function EditHeaderRecord(id){
        var headerId = id;
        localStorage.setItem("headeridvalue", headerId);

        window.location = "@Url.Action("HeaderListEdit", "ERT")" +
                "?headerId=" + headerId;
    }

</script>

@using (Html.BeginForm())
{
                //BreadCrumbs
    <div class="row">
        <div class="body-header w-100">
            <div class="col-lg-12">
                <div class="w-100 d-flex justify-content-md-between py-2 align-items-center">
                    <span class="mb-0 font-weight-bold font-20">FIELD VERIFICATION (Form V2)</span>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-alt mb-0 bg-transparent">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item">MAM</li>
                            <li class="breadcrumb-item" aria-current="page">
                                Form v2
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Section -->
    <div class="search-section">
        <form action="" method="POST">
            <div class="row justify-content-center mb-1">
                <div class="col-sm-12 col-md-8 col-lg-6 col-xl-6 search-content">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.SearchObj.SmartInputValue, new { @Id = "FormV2SmartSearch", placeholder = "Search...", @class = "form-control" })
                        <div class="input-group-append">
                            <div class="btn-group">
                                <button id="formV2SearchBtn" type="button" class="bg-theme-color js-tooltip-enabled px-2 border-0" style="line-height: 18px;"><span class="search-icon"></span></button>
                                <button id="formV2SearchExpBtn" type="button" onclick="detailSearch()" class="bg-theme-color js-tooltip-enabled px-3 border-0"><span class="filter-icon"></span></button>
                                <button id="formBSearchClearBtn" type="button" onclick="clearHeaderSearch()" class="bg-theme-color js-tooltip-enabled px-3 border-0 rounded-right">Clear</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @*Detail Search Screen*@
        <div id="detailSearch">
            <div class="row" id="formV2AdvSearch" style="display:block">
                <form id="formV2DetailsearchForm" name="formV2DetailsearchForm">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="bg-white rounded float-left pt-3 pb-1 px-lg-4 px-md-3 advance-search-group w-100">
                            <div class="row">
                                <div class="form-group col-lg-2">
                                    @Html.Label("RMU ", "RMU ")
                                    @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.RMU, (IEnumerable
