                                </div>
                                <div class="form-group col-lg-2">
                                    @Html.Label("RMU Name", "RMU Name")
                                    <input type="text" class="form-control" id="txtRmuName" disabled />
                                </div>
                                <div class="form-group col-lg-4">
                                    @Html.Label("Section Code ", "Section Code")
                                    @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.Section, (IEnumerable
                                <SelectListItem>)ViewData["SectionCode"], "Select Section Code", new { @Id = "formV2DetSrchSectionCode", @class = "form-control widget-content-area" })
                                </div>
                                <div class="form-group col-lg-2">
                                    @Html.Label("Section Name", "Section Name")
                                    <input type="text" class="form-control" id="txtSectionName" disabled />
                                </div>
                                <div class="form-group col-lg-4">
                                    @Html.Label("Crew ", "Crew")
                                    @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.Section, (IEnumerable
                                <CSelectListItem>)ViewData["User"], "Select Crew", new { @Id = "formV2DetSrchCrew", @class = "form-control widget-content-area" })
                                </div>
                                <div class="form-group col-lg-2">
                                    @Html.Label("Crew Name", "Crew Name")
                                    <input type="text" class="form-control" id="txtCrewName" disabled />
                                </div>
                            </div>
                            <div class="row" style="display:none">
                                <div class="form-group col-lg-2">
                                    @Html.Label("Activity Code", "Activity Code")
                                    @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.ActivityCode, (IEnumerable
                                <SelectListItem>)ViewData["Activity"], "WeekNo", new { @Id = "formV2DetSrchActivityCode", @class = "form-control" })
                                </div>
                                <div class="form-group col-lg-2">
                                    @Html.Label("Activity Name", "Activity Name")
                                    <input type="text" class="form-control" id="txtCrewName" disabled />
                                </div>
                                <div class="form-group col-lg-2">
                                    <label for="Start Date">Start Date(DD-MM-YYY)</label>
                                    <input class="form-control" type="date" id="FormV2SrchByFromDate">
                                </div>
                                <div class="form-group col-lg-2">
                                    <label for="End Date">End Date(DD-MM-YYY)</label>
                                    <input class="form-control" type="date" id="FormV2SrchByToDate">
                                </div>
                                <div class="form-group col-lg-2"></div>
                                <div class="form-group col-lg-2"></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Main Container -->
    <main id="main-container" class="row">
        <div class="col-lg-12">
            <div class="w-100 float-left position-relative">

                <div class="grid-btns">
                    <button type="button" class="btn btn-sm btn-themebtn" @isModifyPerm onclick="javascript:EditFormV2(0,0);"><span class="add-icon"></span> Add Form V2</button>
                </div>

                @*Form V2 Grid*@
                <div id="headerListGrid" class="w-100 dt-tbl-section">
                    @{
                        Html.RenderPartial("_HeaderListGrid.cshtml");
                    }
                </div>

            </div>
        </div>
    </main>
    <script type="text/javascript">
        function onFocusOut() {
            //debugger;

            var frmdate = $("#FormV2SrchByToDate").val();
            if (frmdate != "") {
                d = new Date(frmdate);
                var frmYear = d.getFullYear();
                if (frmYear < 2019 || frmYear > 2099) {
                    app.ShowErrorMessage('Year should between 2019 to 2099')
                    //$("#dtFromDate").val('');
                    $("#FormV2SrchByFromDate").focus();
                    $('#formV2SearchBtn').attr("disabled", true);
                }
                else {
                    $('#formV2SearchBtn').attr("disabled", false);
                }
            }
        }
    </script>
}
