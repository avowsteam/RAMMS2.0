@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;
<div class="main-container" id="container">
    <div id="content">
        <div class="w-100 position-relative in-tbl-btns custom-tbl">
            @if (security.IsPCModify(ModuleNameList.Routine_Maintanance_Work))
            {
                <div class="grid-btns">
                    <button type="button" id="btnMaterialAdd" class="btn btn-sm btn-themebtn" data-toggle="modal" data-backdrop="static" data-target="#FormV2MaterialModal" onclick="javascript:EditFormV2Material(0);"><span class="intbl-add-icon"></span></button>
                </div>
            }

            <table id="FormV2MaterialGridView" class="table w-100 nowrap">
            </table>
        </div>
    </div>
</div>
<!-- Jquery DataTable JS library -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link type="text/css" rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/CDTGrid.js"></script>
<script>
    var isDeletePerm = @security.IsPCDelete(ModuleNameList.Routine_Maintanance_Work).ToString().ToLowerInvariant()? "" : "hidden";
    var mtable_columns = [];
    var Mtable = null;
    var mactionCol = {
        data: null, name: "Action", title: "Action", autoWidth: false, width: 20, sortable: false, render: function (data) {
            if (IsView != "1" && (!data.submitStatus)) {
                var actionSection = "<div class='btn-group dropright' id='Matactiondropdown'> <button id='Matactionclick' type='button' class='btn btn-sm btn-themebtn dropdown-toggle' data-toggle='dropdown'> Click Me </button><div class='dropdown-menu'><button type='button' class='dropdown-item editdel-btns @(ViewBag.view=="1"?"d-none":"")' data-toggle='modal' data-target='#FormV2MaterialModal' id='formV2MaterialEdit' onclick='javascript:EditFormV2Material(" + data.pkRefNo + ");'><span class='edit-icon'></span> Edit</button><button type='button' " + isDeletePerm + " class='dropdown-item editdel-btns' onclick='javascript:DeleteFormV2MaterialRecord(" + data.pkRefNo + ");'><span class='del-icon'></span> Delete</button><button type='button' class='dropdown-item editdel-btns' id='btnMatView' href='#' data-toggle='modal' data-target='#FormV2MaterialModal' onclick='javascript:EditFormV2Material(" + data.pkRefNo + ",1);'><span class='view-icon'></span> View</button></div></div>";
                return actionSection;
            }
            else {
                var actionSection = "<div class='btn-group dropright' id='actiondropdown'> <button id='actionclick' type='button' class='btn btn-sm btn-themebtn dropdown-toggle' data-toggle='dropdown'> Click Me </button><div class='dropdown-menu'><button type='button' class='dropdown-item editdel-btns' id='btnMatView' href='#' data-toggle='modal' data-target='#FormV2MaterialModal' onclick='javascript:EditFormV2Material(" + data.pkRefNo + ",1);'><span class='view-icon'></span> View</button></div></div>";
                return actionSection;
            }
        }
    };
    //var mrefNoCol = { data: "serialNo", name: "msNo", title: "S No", autoWidth: false, width: 20, sortable: false };
    var mCodeCol = { data: "matRefCode", name: "mCode", title: "Code", autoWidth: false, width: 60, sortable: false };
    var mDescCol = { data: "desc", name: "mDescription", title: "Description", autoWidth: true, sortable: false };
    var mQtyCol = { data: "qnty", name: "mQuantity", title: "Qty", autoWidth: true, sortable: false };
    var mUnitCol = { data: "unit", name: "mUnit", title: "Unit", autoWidth: true, sortable: false };

    mtable_columns.push(mactionCol);
    //mtable_columns.push(mrefNoCol);
    mtable_columns.push(mCodeCol);
    mtable_columns.push(mDescCol);
    mtable_columns.push(mQtyCol);
    mtable_columns.push(mUnitCol);

    function PrintForm(id) {
        window.location.href = '/download/PrintForm?id=' + id + "&formname=FormV2";
    }

    var mfilterData = new Object();

    function mInitializeGrid() {
        var _mcurrentGridSettings = new CustomGridSettings();
        $.extend($.fn.dataTable.defaults, _mcurrentGridSettings);

        if (Mtable != null) {
            Mtable.destroy();
            $('#FormV2MaterialGridView').empty();
        }

        mfilterData.HeaderNo = $("#FV2PkRefNo").val();

        Mtable = $('#FormV2MaterialGridView').DataTable({
            ajax: {
                url: "/MAM/LoadFormV2MaterialList?id=" + $("#FV2PkRefNo").val(),
                type: "POST",
                datatype: "json",
                data: {
                    mfilterData
                }
            },
            columns: mtable_columns
        });
        Mtable.columns.adjust().draw();
    }

    $(document).ready(function () {
        mInitializeGrid();
        IsView = $("#hdnView").val();
        moTable = $('#FormV2MaterialGridView').DataTable();
    });
</script>