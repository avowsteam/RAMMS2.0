@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;
<div class="main-container" id="container">
    <div id="content">
        <div class="w-100 position-relative in-tbl-btns custom-tbl">
            @if (security.IsPCModify(ModuleNameList.Routine_Maintanance_Work))
            {
                <div class="grid-btns">
                    <button type="button" id="btnMaterialAdd" class="btn btn-sm btn-themebtn" data-toggle="modal" data-backdrop="static" data-target="#FormQa1MaterialModal" onclick="javascript:EditFormQa1Material(0);"><span class="intbl-add-icon"></span></button>
                </div>
            }

            <table id="FormQa1MaterialGridView" class="table w-100 nowrap">
            </table>
        </div>
    </div>
</div>
<!-- Jquery DataTable JS library -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link type="text/css" rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/CDTGrid.js"></script>
<script>
    var isDeletePerm = @security.IsPCDelete(ModuleNameList.Routine_Maintanance_Work).ToString().ToLowerInvariant()? "" : "hidden";
    var mtable_columns = [];
    var Mtable = null;
    var mactionCol = {
        data: null, name: "Action", title: "Action", autoWidth: false, width: 20, sortable: false, render: function (data) {
            if (IsView != "1" ) {
                var actionSection = "<div class='btn-group dropright' id='Matactiondropdown'> <button id='Matactionclick' type='button' class='btn btn-sm btn-themebtn dropdown-toggle' data-toggle='dropdown'> Click Me </button><div class='dropdown-menu'><button type='button' class='dropdown-item editdel-btns @(ViewBag.view=="1"?"d-none":"")' data-toggle='modal' data-target='#FormQa1MaterialModal' id='formQa1MaterialEdit' onclick='javascript:EditFormQa1Material(" + data.pkRefNo + ");'><span class='edit-icon'></span> Edit</button><button type='button' " + isDeletePerm + " class='dropdown-item editdel-btns' onclick='javascript:DeleteFormQa1MaterialRecord(" + data.pkRefNo + ");'><span class='del-icon'></span> Delete</button><button type='button' class='dropdown-item editdel-btns' id='btnMatView' href='#' data-toggle='modal' data-target='#FormQa1MaterialModal' onclick='javascript:EditFormQa1Material(" + data.pkRefNo + ",1);'><span class='view-icon'></span> View</button></div></div>";
                return actionSection;
            }
            else {
                var actionSection = "<div class='btn-group dropright' id='actiondropdown'> <button id='actionclick' type='button' class='btn btn-sm btn-themebtn dropdown-toggle' data-toggle='dropdown'> Click Me </button><div class='dropdown-menu'><button type='button' class='dropdown-item editdel-btns' id='btnMatView' href='#' data-toggle='modal' data-target='#FormQa1MaterialModal' onclick='javascript:EditFormQa1Material(" + data.pkRefNo + ",1);'><span class='view-icon'></span> View</button></div></div>";
                return actionSection;
            }
        }
    };
    //var mrefNoCol = { data: "serialNo", name: "msNo", title: "S No", autoWidth: false, width: 20, sortable: false };
    var mTypeCol = { data: "type", name: "mType", title: "Type", autoWidth: true, sortable: false };
    var mQtyCol = { data: "qty", name: "mQty", title: "Qty. Seen", autoWidth: true, sortable: false };
    var mSpecCol = { data: "spec", name: "mSpec", title: "As Per Specification", autoWidth: true, sortable: false };
    var mRemarkCol = { data: "remark", name: "mRemark", title: "Remarks", autoWidth: true, sortable: false };

    mtable_columns.push(mactionCol);
    mtable_columns.push(mTypeCol);
    mtable_columns.push(mQtyCol);
    mtable_columns.push(mSpecCol);
    mtable_columns.push(mRemarkCol);

    function PrintForm(id) {
        window.location.href = '/download/PrintForm?id=' + id + "&formname=FormQa1";
    }

    var mfilterData = new Object();

    function mInitializeGrid() {
        var _mcurrentGridSettings = new CustomGridSettings();
        $.extend($.fn.dataTable.defaults, _mcurrentGridSettings);

        if (Mtable != null) {
            Mtable.destroy();
            $('#FormQa1MaterialGridView').empty();
        }

        mfilterData.HeaderNo = $("#formQa1PkRefNo").val();

        Mtable = $('#FormQa1MaterialGridView').DataTable({
            ajax: {
                url: "/FormQA1/LoadFormQa1MaterialList?id=" + $("#formQa1PkRefNo").val(),
                type: "POST",
                datatype: "json",
                data: {
                    mfilterData
                }
            },
            columns: mtable_columns
        });
        Mtable.columns.adjust().draw();
    }

    $(document).ready(function () {
        mInitializeGrid();
        IsView = $("#hdnView").val();
        moTable = $('#FormQa1MaterialGridView').DataTable();
        moTable.columns.adjust().draw();
    });
</script>