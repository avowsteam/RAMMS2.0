                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-lg-4">
                                    <div class="row">
                                        <div class="col-6 form-group">
                                            @Html.Label("Section Code ", "Section Code")
                                            @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.Section, (IEnumerable
                                            <SelectListItem>)ViewData["SectionCode"], "Select Section Code", new { @Id = "formQa1SectionCode", @class = "form-control widget-content-area" })
                                        </div>
                                        <div class="form-group col-lg-6 mb-0">
                                            @Html.Label("Section Name", "Section Name")
                                            <input type="text" class="form-control" id="txtSectionName" disabled />
