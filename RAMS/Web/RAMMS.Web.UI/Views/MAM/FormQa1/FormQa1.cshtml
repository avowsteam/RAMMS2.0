@using RAMMS.Business.ServiceProvider
@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;

@{
    ViewBag.TabTitle = "MAM - Form Qa1 - Road Asset Management and Maintenance System";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var isModifyPerm = security.IsPCModify(ModuleNameList.Routine_Maintanance_Work) ? "" : "hidden";
    var isDeletePerm = security.IsPCDelete(ModuleNameList.Routine_Maintanance_Work) ? "" : "hidden";
}
@model RAMMS.Web.UI.Models.FormQa1Model;

<script type="text/javascript">
    $(document).ready(function () {
        $("#formQa1RMU").chosen();
        $('#formQa1SectionCode').chosen();
        $("#formQa1AdvSearch").hide();

        $("#formQa1RMU").on("change", function () {
            var val = $(this).find(":selected").text();
            val = val.split("-").length > 0 ? val.split("-")[1] : val;
            $("#txtRmuName").val(val);
            var req = {};
            req.Section = '';
            req.RoadCode = '';
            req.RMU = $("#formQa1RMU option:selected").text().split("-")[1];
            $.ajax({
                url: '/MAM/RMUSecRoad',
                dataType: 'JSON',
                data: req,
                type: 'Post',
                success: function (data) {
                    if (data != null) {
                        $("#formQa1SectionCode").empty();
                        $("#formQa1SectionCode").append($("<option></option>").val("").html("Select Section Code"));
                        $.each(data.section, function (index, v) {
                            $("#formQa1SectionCode").append($("<option></option>").val(v.value).html(v.text));
                        });
                        $("#formQa1SectionCode").trigger("change");
                        $('#formQa1SectionCode').trigger("chosen:updated");

                    } else {

                    }
                },
                error: function (data) {

                    console.error(data);
                }
            });
        });


        $("#formQa1SectionCode").on("change", function () {
            var ddldata = $(this).val();
            var secCode = $("#formQa1SectionCode option:selected").text().split("-")[0];
            if (ddldata != "") {
                $("#formQa1SectionName").val(ddldata);
                //GetAllRoadCodeDataBySectionCode
                $.ajax({
                    url: '/FormQa1/GetRoadCodeBySection',
                    dataType: 'JSON',
                    data: { secCode },
                    type: 'Post',
                    success: function (data) {
                        if (data != null) {
                            $("#formQa1RoadCode").empty();
                            $("#formQa1RoadCode").append($("<option></option>").val("").html("Select Road Code"));
                            $.each(data, function (index, v) {
                                var text = v.roadCode + " - " + v.roadName;
                                $("#formQa1RoadCode").append($("<option></option>").val(v.roadCode).html(text).attr("Item1", v.roadName));
                            });
                            $("#formQa1RoadCode").trigger("change");
                            $('#formQa1RoadCode').trigger("chosen:updated");

                        } else {

                        }
                    },
                    error: function (data) {

                        console.error(data);
                    }
                });
            }
            else {
                $("#txtSectionName").val("");
            }
            return false;
        });

        $("#formQa1Crew").on("change", function () {
            var val = $("#formQa1Crew option:selected").text();
            var Name = val.split("-")[1];
            var ctrl = $(this);
            if (val != "99999999" && val != "") {
                $("#txtCrewName").val(Name);
            }
            else if (val == "99999999") {
                $("#txtCrewName").prop("disabled", false);
                $("#txtCrewName").val('');
            }
            else {
                $("#txtCrewName").prop("disabled", true);
                $("#txtCrewName").val('');
            }
            return false;
        });

        $("#formQa1SectionCode").on("change", function () {
            var ddldata = $(this).val();
            if (ddldata != "") {
                $("#txtSectionName").val(ddldata);
            }
            else {
                $("#txtSectionName").val("");
            }
            return false;
        });

        $("#formQa1RoadCode").on("change", function () {
            var val = $(this).find(":selected").attr("Item1");
            $("#txtRoadName").val(val);
        });

         $("#formQa1ActivityCode").on("change", function () {
            var val = $(this).find(":selected").text();
            val = val.split("-").length > 0 ? val.split("-")[1] : val;
            $("#formQa1ActivityName").val(val);
        });
    });

    function clearHeaderSearch() {
        $("#FormQa1SmartSearch").val('');
        $("#formQa1RMU").val("").trigger("chosen:updated");
        $("#txtRmuName").val("");

        $("#formQa1RoadCode").val("").trigger("chosen:updated");
        $("#txtRoadName").val("");

        $('#formQa1SectionCode').val("").trigger("chosen:updated");
        $("#txtSectionName").val("");

        $("#formQa1Crew").val("").trigger("chosen:updated");
        $("#txtCrewName").val("");

        $("#formQa1ActivityCode").val("").trigger("chosen:updated");
        $("#formQa1ActivityName").val("");

        $("#formQa1FromDate").val('');
        $("#formQa1EndDate").val('');

        var req = {};
        var _rmu = $("#formQa1RMU");
        var _road = $("#formQa1SectionCode");
        req.RMU = this.value;
        req.Section = '';
        req.RoadCode = '';

        $.ajax({
            url: '/ERT/RMUSecRoad',
            dataType: 'JSON',
            data: req,
            type: 'Post',
            success: function (data) {
                if (req.RMU == "") {
                    $("#formQa1RMU").empty();
                    $("#formQa1RMU").append($("<option></option>").val("").html("Select RMU"));
                    $.each(data.rmu, function (index, v) {
                        $("#formQa1RMU").append($("<option></option>").val(v.value).html(v.text));
                    });
                }
                if (req.Section == "") {
                    $("#formQa1SectionCode").empty();
                    $("#formQa1SectionCode").append($("<option></option>").val("").html("Select Section Code"));
                    $.each(data.section, function (index, v) {
                        $("#formQa1SectionCode").append($("<option></option>").val(v.value).html(v.text));
                    });

                    $('#formQa1SectionCode').trigger("chosen:updated");
                }
            },
            error: function (data) {

                console.error(data);
            }
        });
        $("#formQa1SearchBtn").click();
    }

    function detailSearch() {
        $("#formQa1AdvSearch").slideToggle(500);
    }

    function FormQa1GridRefresh() {

        oTable = $('#FormQa1GridView').DataTable();
        oTable.columns(0).search($("#formQa1SmartSearch").val().trim());

        var rmuCode = $("#formQa1RMU").val();
        if (rmuCode != "") {
            oTable.columns(1).search(rmuCode);
        } else {
                oTable.columns(1).search("");
        }

        var secCode = $("#formQa1SectionCode").val();
        if (secCode != "") {
            oTable.columns(2).search(secCode);
        } else {
                oTable.columns(2).search("");
        }

        var crewCode = $("#formQa1Crew").val().trim();

        if (crewCode != "" ){
            oTable.columns(3).search(crewCode);
        }
        else {
            oTable.columns(3).search("");
        }

        var actCode = $("#formQa1ActivityCode").val().trim();

        if (actCode != "" ){
            oTable.columns(4).search(actCode);
        }
        else {
            oTable.columns(4).search("");
        }

        oTable.columns(5).search($("#formQa1FromDate").val());
        oTable.columns(6).search($("#formQa1EndDate").val());

        var rdCode = $("#formQa1RoadCode").val().trim();

        if (rdCode != "" ){
            oTable.columns(7).search(rdCode);
        }
        else {
            oTable.columns(7).search("");
        }

        oTable.data = filterData;
        oTable.draw();
    }

    function EditFormQa1(pid,view) {
        window.location = "@Url.Action("EditFormQa1", "FormQA1")" +
            "?id=" + pid + "&view=" + view;
    }

    function DeleteHeaderRecord(pkId) {
        app.Confirm("Are you sure you want to delete the record?, If Yes click OK.", function (e) {
            if (e) {
                InitAjaxLoading();
                $.ajax({
                    url: '/FormQA1/HeaderListFormQa1Delete',
                    data: { pkId },
                    type: 'POST',
                    success: function (data) {
                        if (data > 0) {
                            app.ShowSuccessMessage('Successfully Deleted', false);
                            FormQa1GridRefresh();
                        }
                        else {
                            app.ShowErrorMessage("Error in Deleted. Kindly retry later.", false);
                        }
                        HideAjaxLoading();
                    }
                });
            }
        });
    }

    function EditHeaderRecord(id){
        var headerId = id;
        localStorage.setItem("headeridvalue", headerId);

        window.location = "@Url.Action("HeaderListEdit", "ERT")" +
                "?headerId=" + headerId;
    }
</script>


<div class="container-fluid">
