@using RAMMS.Business.ServiceProvider
@inject RAMMS.Business.ServiceProvider.Interfaces.ISecurity security;

@{
    ViewBag.TabTitle = "ERT - Form V3 - Road Asset Management and Maintenance System";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    var isModifyPerm = security.IsPCModify(ModuleNameList.Management_and_Maintanence) ? "" : "hidden";
    var isDeletePerm = security.IsPCDelete(ModuleNameList.Management_and_Maintanence) ? "" : "hidden";
}

@model RAMMS.Web.UI.Models.FormV3Model;
<script type="text/javascript">
    $(document).ready(function () {
        $("#formV3DetSrchRMU").chosen();
        $('#formV3DetSrchSectionCode').chosen();
        $("#formV3AdvSearch").hide();

        $("#formV3DetSrchRMU").on("change", function () {
            var rmu = $("#formV3DetSrchRMU").find("option:selected").text();
            var rmuName = rmu.split("-")[1];
           $("#txtRmuName").val(rmuName);
        });

        //$("#formV3DetSrchRMU").trigger("change");

        $("#formV3DetSrchCrew").on("change", function () {
            var val = $("#formV3DetSrchCrew option:selected").text();
            var Name = val.split("-")[1];
            var ctrl = $(this);
            if (val != "99999999" && val != "") {
                $("#txtCrewName").val(Name);
            }
            else if (val == "99999999") {
                $("#txtCrewName").prop("disabled", false);
                $("#txtCrewName").val('');
            }
            else {
                $("#txtCrewName").prop("disabled", true);
                $("#txtCrewName").val('');
            }
            return false;
        });

        $("#formV3DetSrchSectionCode").on("change", function () {
            var ddldata = $(this).val();
            if (ddldata != "") {
               $("#txtSectionName").val(ddldata);
            }
            else {
                $("#txtSectionName").val("");
            }
            return false;
        });
    });

    function clearHeaderSearch() {
        $("#FormV3SmartSearch").val('');
        $("#formV3DetSrchRMU").val("").trigger("chosen:updated");
        $('#formV3DetSrchSectionCode').val("").trigger("chosen:updated");
        $("#formV3DetSrchCrew").val("").trigger("chosen:updated");
        //$("#formV3DetSrchActivityCode").val("").trigger("chosen:updated");
        //$("#FormV3SrchByFromDate").val('');
        //$("#FormV3SrchByToDate").val('');

        var req = {};
        var _rmu = $("#formV3DetSrchRMU");
        var _road = $("#formV3DetSrchSectionCode");
        req.RMU = this.value;
        req.Section = '';
        req.RoadCode = '';

        $.ajax({
            url: '/ERT/RMUSecRoad',
            dataType: 'JSON',
            data: req,
            type: 'Post',
            success: function (data) {
                if (req.RMU == "") {
                    $("#formV3DetSrchRMU").empty();
                    $("#formV3DetSrchRMU").append($("<option></option>").val("").html("Select RMU"));
                    $.each(data.rmu, function (index, v) {
                        $("#formV3DetSrchRMU").append($("<option></option>").val(v.value).html(v.text));
                    });
                }
                if (req.Section == "") {
                    $("#formV3DetSrchSectionCode").empty();
                    $("#formV3DetSrchSectionCode").append($("<option></option>").val("").html("Select Section Code"));
                    $.each(data.section, function (index, v) {
                        $("#formV3DetSrchSectionCode").append($("<option></option>").val(v.value).html(v.text));
                    });

                    $('#formV3DetSrchSectionCode').trigger("chosen:updated");
                }
            },
            error: function (data) {

                console.error(data);
            }
        });
        $("#formV3SearchBtn").click();
    }

    function detailSearch() {
        $("#formV3AdvSearch").slideToggle(500);
    }

    function FormV3GridRefresh() {

        oTable = $('#FormV3GridView').DataTable();
        oTable.columns(0).search($("#FormV3SmartSearch").val().trim());

        var rmuCode = $("#formV3DetSrchRMU").val();
        if (rmuCode != "") {
            oTable.columns(1).search(rmuCode);
        } else {
                oTable.columns(1).search("");
        }

        var secCode = $("#formV3DetSrchSectionCode").val();
        if (secCode != "") {
            oTable.columns(2).search(secCode);
        } else {
                oTable.columns(2).search("");
        }

        var crewCode = $("#formV3DetSrchCrew").val().trim();

        if (crewCode != "" ){
            oTable.columns(3).search(crewCode);
        }
        else {
            oTable.columns(3).search("");
        }

        oTable.data = filterData;
        oTable.draw();
    }



    function DeleteHeaderRecord(id) {
        
        app.Confirm("Are you sure you want to delete the record?, If Yes click OK.", function (e) {
            if (e) {
                InitAjaxLoading();
                $.ajax({
                    url: '/MAM/DeleteFormV3',
                    data: { id },
                    type: 'POST',
                    success: function (data) {
                        if (data > 0) {
                            app.ShowSuccessMessage('Successfully Deleted', false);
                            FormV3GridRefresh();
                        }
                        else {
                            app.ShowErrorMessage("Error in Deleted. Kindly retry later.", false);
                        }
                        HideAjaxLoading();
                    }
                });
            }
        });
    }

    function EditHeaderRecord(id){
        var headerId = id;
        localStorage.setItem("headeridvalue", headerId);

        window.location = "@Url.Action("HeaderListEdit", "ERT")" +
                "?headerId=" + headerId;
    }



</script>

@using (Html.BeginForm())
    @*{*@
    //BreadCrumbs
<div class="row">
    <div class="body-header w-100">
        <div class="col-lg-12">
            <div class="w-100 d-flex justify-content-md-between py-2 align-items-center">
                <span class="mb-0 font-weight-bold font-20">FIELD VERIFICATION (Form V3)</span>
