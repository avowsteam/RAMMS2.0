            </div>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="search-section">
    <form action="" method="POST">
        <div class="row justify-content-center mb-1">
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-6 search-content">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.SearchObj.SmartInputValue, new { @Id = "FormV3SmartSearch", placeholder = "Search...", @class = "form-control" })
                    <div class="input-group-append">
                        <div class="btn-group">
                            <button id="formV3SearchBtn" type="button" class="bg-theme-color js-tooltip-enabled px-2 border-0" style="line-height: 18px;"><span class="search-icon"></span></button>
                            <button id="formV3SearchExpBtn" type="button" onclick="detailSearch()" class="bg-theme-color js-tooltip-enabled px-3 border-0"><span class="filter-icon"></span></button>
                            <button id="formV3SearchClearBtn" type="button" onclick="clearHeaderSearch()" class="bg-theme-color js-tooltip-enabled px-3 border-0 rounded-right">Clear</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @*Detail Search Screen*@
    <div id="detailSearch">
        <div class="row" id="formV3AdvSearch" style="display:block">
            <form id="formV3DetailsearchForm" name="formV3DetailsearchForm">
                <div class="col-lg-8 offset-lg-2">
                    <div class="bg-white rounded float-left pt-3 pb-1 px-lg-4 px-md-3 advance-search-group w-100">
                        <div class="row">
                            <div class="form-group col-lg-2">
                                @Html.Label("RMU ", "RMU ")
                                @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.RMU, (IEnumerable
                            <SelectListItem>)ViewData["RMU"], "Select RMU", new { @Id = "formV3DetSrchRMU", @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.Label("RMU Name", "RMU Name")
                                <input type="text" class="form-control" id="txtRmuName" disabled />
                            </div>
                            <div class="form-group col-lg-4">
                                @Html.Label("Section Code ", "Section Code")
                                @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.Section, (IEnumerable
                            <SelectListItem>)ViewData["SectionCode"], "Select Section Code", new { @Id = "formV3DetSrchSectionCode", @class = "form-control widget-content-area" })
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.Label("Section Name", "Section Name")
                                <input type="text" class="form-control" id="txtSectionName" disabled />
                            </div>
                            <div class="form-group col-lg-4">
                                @Html.Label("Crew ", "Crew")
                                @Html.DropDownListFor(Ahdr => Ahdr.SearchObj.Section, (IEnumerable
                            <CSelectListItem>)ViewData["User"], "Select Crew", new { @Id = "formV3DetSrchCrew", @class = "form-control widget-content-area" })
                            </div>
                            <div class="form-group col-lg-4">
                                @Html.Label("Crew Name", "Crew Name")
                                <input type="text" class="form-control" id="txtCrewName" disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Main Container -->
