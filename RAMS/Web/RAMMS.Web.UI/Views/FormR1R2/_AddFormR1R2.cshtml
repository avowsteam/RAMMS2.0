        });

        $("#AssetUploadBtn").click(function (e) {
            var type = $("#photoType").val();


            if (type == 'Barriers'){
                var blength = $("td:equals(Barriers)").length;
                if (blength >= 1) {
                    ShowErrorMessage("You cannot upload more than 1 files for Barriers type");
                    return;
