        function formG1G2GridRefresh() {

            oTable = $('#formG1G2GridView').DataTable();
            oTable.columns(0).search($("#formG1G2SmartSearch").val().trim());

            var rmuCode = $("#formG1G2RMU").val();
            if (rmuCode != "") {
                oTable.columns(1).search(rmuCode);
            } else {
                oTable.columns(1).search("");
            }

            var secCode = $("#formG1G2SectionCode").val();
            if (secCode != "") {
                oTable.columns(2).search(secCode);
            } else {
                oTable.columns(2).search("");
            }

            var crewCode = $("#formG1G2Crew").val().trim();

            if (crewCode != "") {
                oTable.columns(3).search(crewCode);
            }
            else {
                oTable.columns(3).search("");
            }

            var actCode = $("#formG1G2ActivityCode").val().trim();

            if (actCode != "") {
                oTable.columns(4).search(actCode);
            }
            else {
                oTable.columns(4).search("");
            }

            oTable.columns(5).search($("#formG1G2FromDate").val());
            oTable.columns(6).search($("#formG1G2EndDate").val());

            var rdCode = $("#formG1G2RoadCode").val().trim();

            if (rdCode != "") {
                oTable.columns(7).search(rdCode);
            }
            else {
                oTable.columns(7).search("");
            }

            oTable.data = filterData;
            oTable.draw();
        }

