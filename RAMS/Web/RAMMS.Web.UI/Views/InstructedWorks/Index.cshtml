        if (mode == 'Add') {
            id = GetFormIDByName("w1");
            if (id > 0 && id != null) {
                url = '/InstructedWorks/AddFormW2?id=' + id;
            }

        }
        else {
            id = GetFormIDByName("w2");
            if (id > 0 && id != null)
                url = '/InstructedWorks/EditFormW2?id=' + id + (view == 1 ? '&view=1' : '');
        }

